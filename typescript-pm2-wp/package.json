{
  "name": "typescript-pm2-wp",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf ./build/* && rimraf ./logs/*",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "build": "npm run clean && npm run lint && webpack --watch",
    "start:dev": "NODE_ENV=development npm run build",
    "run:dev": "pm2 start ./config/pm2/pm2-dev-process.config.js",
    "start:prod": "NODE_ENV=production npm run build",
    "run:prod": "pm2 start ./config/pm2/pm2-prod-process.config.js",
    "monitor": "pm2 monit",
    "logs": "pm2 logs api-rest --lines 2000",
    "stop": "pm2 delete api-rest && npm run clean",
    "test": "NODE_ENV=test mocha -r ts-node/register test/**/*.test.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "^4.2.9",
    "@types/mocha": "^7.0.1",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "codelyzer": "^5.2.1",
    "mocha": "^7.1.0",
    "source-map": "^0.7.3",
    "supertest": "^4.0.2",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-consistent-codestyle": "^1.16.0",
    "tslint-defocus": "^2.0.6",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-origin-ordered-imports-rule": "^1.2.2",
    "tslint-plugin-prettier": "^2.1.0",
    "tslint-rxjs-subject-restrictions-rule": "^1.0.4"
  },
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.2",
    "@types/webpack": "^4.41.6",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "fork-ts-checker-webpack-plugin": "^4.0.4",
    "prettier": "^1.19.1",
    "tslint": "^6.0.0",
    "typescript": "^3.8.2",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "webpack-shell-plugin": "^0.5.0",
    "winston": "^3.2.1"
  }
}
